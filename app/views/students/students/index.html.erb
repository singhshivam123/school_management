<div class="content-wrapper">
  <div class="page-header">
    <h3 class="page-title"> Student Tables </h3>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= students_students_path %>">Student Tables</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Students</li>
      </ol>
    </nav>
  </div>

  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Teacher table</h4>
          <table class="table table-bordered table-responsive">
            <thead>
              <tr>
                <th>First name</th>
                <th>Middle name</th>
                <th>Last name</th>
                <th>Date of birth</th>
                <th>Father name</th>
                <th>Join date</th>
                <th>Leaving date</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Destroy</th>
              </tr>
            </thead>

            <tbody>
              <% @students.each do |student| %>
              <tr>
                <td><%= student.first_name %></td>
                <td><%= student.middle_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.date_of_birth.strftime("%m-%d-%Y") %></td>
                <td><%= student.father_name %></td>
                <td><%= student.join_date.strftime("%m-%d-%Y") %></td>
                <td><%= student.leaving_date.strftime("%m-%d-%Y") %></td>
                <td><%= student.mobile %></td>
                <td><%= student.email %></td>
                <td><%= button_to "show", students_student_path(student), method: :get, class: "btn btn-gradient-info btn-fw"  %></td>
                <td><%= button_to "Edit", edit_students_student_path(student), method: :get, class: "btn btn-gradient-primary btn-fw"  %></td>
                <td><%= button_to "Destroy", students_student_path(student), method: :delete, class: "btn btn-gradient-danger btn-fw", data: { confirm: 'Are you sure?' }  %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
