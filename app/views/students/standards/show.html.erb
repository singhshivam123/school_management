<div class="content-wrapper">
  <div class="page-header">
    <h3 class="page-title"> Standard Details </h3>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= students_standards_path %>">Standard Tables</a></li>
        <li class="breadcrumb-item active" aria-current="page">Show Standard Details</li>
      </ol>
    </nav>
  </div>
  <div class="row">
    <div class="col-md-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Student Details</h4>
          <div class="row">
            <div class="col-md-6">
              <p class="text-info">Name:</p>
              <p class="text-info">Description:</p>
              <p class="text-info">Board:</p>
            </div>
            <div class="col-md-6">
              <p class="text-light bg-dark pl-1"><%= @standard.name %></p>
              <p class="text-light bg-dark pl-1"><%= @standard.description %></p>
              <p class="text-light bg-dark pl-1"><%= @standard.board %></p>
            </div>
          </div>&nbsp;
          <div class="text-center">
            <%= button_to "Back", students_standards_path, method: :get,  class: "btn btn-outline-primary btn-fw"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
