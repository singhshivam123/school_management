<div class="content-wrapper">
  <div class="page-header">
    <h3 class="page-title"> Subject Details </h3>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= students_subjects_path %>">Subject Tables</a></li>
        <li class="breadcrumb-item active" aria-current="page">Show Subject Details</li>
      </ol>
    </nav>
  </div>
  <div class="row">
    <div class="col-md-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Subject Details</h4>
          <div class="row">
            <div class="col-md-6">
              <p class="text-info">Name:</p>
            </div>
            <div class="col-md-6">
              <p class="text-light bg-dark pl-1"><%= @subject.name %></p>
            </div>
          </div>&nbsp;
          <div class="text-center">
            <%= button_to "Back", students_subjects_path, method: :get,  class: "btn btn-outline-primary btn-fw"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
