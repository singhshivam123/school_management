<div class="content-wrapper">
  <div class="page-header">
    <h3 class="page-title"> Parent Tables </h3>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_parents_path %>">Parent Tables</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Parents</li>
      </ol>
    </nav>
  </div>
  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Parent table</h4>
          <div class="shadow-lg p-3 mb-5 mt-5 bg-white rounded">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="shadow p-3 mb-3 bg-white rounded">
                  <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Occupation</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Show</th>
                    <th>Edit</th>
                    <th>Destroy</th>
                  </tr>
                </thead>

                <tbody>
                  <% @parents.each do |parent| %>
                  <tr>
                    <td><%= parent.name %></td>
                    <% if parent.gender == false %>
                    <td>Female</td>
                    <% elsif %>
                    <td>Male</td>
                    <% end %>
                    <td><%= parent.occupation %></td>
                    <td><%= parent.address %></td>
                    <td><%= parent.phone %></td>
                    <td><%= parent.email %></td>
                    <td><%= button_to "show", admin_parent_path(parent), method: :get, class: "btn btn-gradient-info btn-fw"  %></td>
                    <td><%= button_to "Edit", edit_admin_parent_path(parent), method: :get, class: "btn btn-gradient-primary btn-fw"  %></td>
                    <td><%= button_to "Destroy", admin_parent_path(parent), method: :delete, class: "btn btn-gradient-danger btn-fw", data: { confirm: 'Are you sure?' }  %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
