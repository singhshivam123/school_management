<div class="content-wrapper">
  <div class="page-header">
    <h3 class="page-title"> New Standard </h3>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_standards_path %>">Standard Tables</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add New Standard</li>
      </ol>
    </nav>
  </div>
  <%= form_with(model: @standard, local: true, url: admin_standards_path) do |form| %>
    <% if @standard.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@standard.errors.count, "error") %> prohibited this standard from being saved:</h2>

        <ul>
          <% @standard.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :board %>
      <%= form.text_field :board, class: 'form-control' %>
    </div>&nbsp;

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>

</div>
