<div class="content-wrapper">
  <div class="page-header">
    <h3 class="page-title"> Standard Tables </h3>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="<%= admin_standards_path %>">Standard Tables</a></li>
        <li class="breadcrumb-item active" aria-current="page">All Standard</li>
      </ol>
    </nav>
  </div>
  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Standard table</h4>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Board</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Destroy</th>
              </tr>
            </thead>

            <tbody>
              <% @standards.each do |standard| %>
              <tr>
                <td><%= standard.name %></td>
                <td><%= standard.description %></td>
                <td><%= standard.board %></td>
                <td><%= button_to "show", admin_standard_path(standard), method: :get, class: "btn btn-gradient-info btn-fw"  %></td>
                <td><%= button_to "Edit", edit_admin_standard_path(standard), method: :get, class: "btn btn-gradient-primary btn-fw"  %></td>
                <td><%= button_to "Destroy", admin_standard_path(standard), method: :delete, class: "btn btn-gradient-danger btn-fw", data: { confirm: 'Are you sure?' }  %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
